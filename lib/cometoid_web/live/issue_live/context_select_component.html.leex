<%= for context = {id, title} <- ContextSelectComponent.get_contexts(@state) do %>
    <div phx-click="toggle_context"
         phx-value-id="<%= id %>"
         phx-target="<%= @myself %>"
         class="<%= if ContextSelectComponent.is_selected?(@state, id) do 'selected-issue-color' else 'deselected-issue-color' end %>"
         >
        <%= title %>
    </div>
<% end %>
