<%= f = form_for @changeset, "#",
  id: "issue-description-form",
  phx_target: @myself,
  phx_change: "changes",
  phx_submit: "save" %>

  <%= submit "Save", phx_disable_with: "Saving...", class: "color background-color" %>

  <%= textarea f, :description, id: "text-area", phx_hook: "TextAreaHook" %>
  <%= error_tag f, :description %>
</form>
