<h1>Link "<%= @state.selected_issue.title %>"</h1>

<%= f = form_for :links, "#",
  id: "link-form",
  phx_target: @myself,
  phx_change: "change",
  phx_submit: "save"
  %>

  <br>
  <%= submit "Save", phx_disable_with: "Saving..." %>

  <%= for {title, id} <- LinkFormComponent.list_selectable_contexts(@state) do %>
    <div>
      <%= checkbox f, id, value: @links[id] %>
      <%= label f, title %>
      <hr>
    </div>
  <% end  %>

</form>
