<h2>Edit event</h2>

<%= f = form_for @changeset, "#",
  id: "event-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= if @is_standalone == true do %>
    <%= label f, :title %>
    <%= text_input f, :title %>
    <%= error_tag f, :title %>
  <%= end %>

  <%= label f, :date %>
  <%= date_select f, :date, [default: :calendar.local_time()] %>
  <%= error_tag f, :date %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
